<!-- views/chws.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CHWS Page</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      line-height: 1.6;
      margin: 0px auto;
      padding: 0px auto;
    }

    h1 {
      margin-top: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th,
    td {
      padding: 10px;
      border-bottom: 1px solid #ddd;
      text-align: left;
    }

    th:first-child,
    td:first-child {
      font-weight: bold;
    }

    thead th {
      background-color: #f2f2f2;
    }

    tbody tr:hover {
      background-color: #f5f5f5;
    }

    a {
      display: block;
      margin-top: 20px;
      text-decoration: none;
      color: blue;
    }

    a:hover {
      text-decoration: underline;
    }

    #structure-exemple,
    #structure-exemple li ul,
    #structure-exemple li ul li ul,
    #structure-exemple li ul li ul li ul,
    #structure-exemple li ul li ul li ul li ul {
      list-style: none;
    }
  </style>
</head>

<body>
  <h1>Paramètres</h1>
  <table>
    <thead>
      <tr>
        <th>Paramètre</th>
        <th>Type</th>
        <th>Exemple 1</th>
        <th>Exemple 2</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>api_access_key</td>
        <td>string</td>
        <td>api_access_key=myapiaccesskey</td>
        <td>api_access_key='myapiaccesskey'</td>
      </tr>
      <tr>
        <td>start_date</td>
        <td>string</td>
        <td>start_date=2023-11-26</td>
        <td>start_date='2023-11-26'</td>
      </tr>
      <tr>
        <td>end_date</td>
        <td>string</td>
        <td>end_date=2023-12-25</td>
        <td>end_date='2023-12-25'</td>
      </tr>
      <tr>
        <td>districts</td>
        <td>string | Array</td>
        <td>districts=id_district</td>
        <td>districts=[id_district1, id_district2, ...]</td>
      </tr>
      <tr>
        <td>sites</td>
        <td>string | Array</td>
        <td>sites=id_site</td>
        <td>sites=[id_site1, id_site2, ...]</td>
      </tr>
      <tr>
        <td>chws</td>
        <td>string | Array</td>
        <td>chws=id_chw</td>
        <td>chws=[id_chw1, id_chw2, ...]</td>
      </tr>
      <tr>
        <td>zones</td>
        <td>string | Array</td>
        <td>zones=id_zone</td>
        <td>zones=[id_zone1, id_zone2, ...]</td>
      </tr>
    </tbody>
  </table>

  <h1>Exemple</h1>
  <ul>
    <li>Host: <%= host %>
    </li>
    <li>API Access Key: <%= api_access_key %>
    </li>
    <li>Start Date: <%= start_date %>
    </li>
    <li>End Date: <%= end_date %>
    </li>
    <li>Districts: <%= districts %>
    </li>
    <li>Sites: <%= sites %>
    </li>
    <li>CHWs: <%= chws %>
    </li>
  </ul>

  <h1>URL complet</h1>
  <% if (typeof full_url !=='undefined' ) { %>
    <a href="<%= full_url %>">
      <%= full_url %>
    </a>
    <% } else { %>
      <p>URL complet non disponible</p>
      <% } %>

